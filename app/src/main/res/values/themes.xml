<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YesOrNo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryVariant">@color/app_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_secondary</item>
        <item name="colorSecondaryVariant">@color/app_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorTertiary">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/app_primary</item>
        <item name="android:navigationBarColor">@color/app_primary</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>
</resources>